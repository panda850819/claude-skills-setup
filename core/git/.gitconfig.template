[user]
    name = YOUR_NAME
    email = YOUR_EMAIL

[core]
    editor = vim
    excludesfile = ~/.gitignore_global
    autocrlf = input

[init]
    defaultBranch = main

[pull]
    rebase = false

[push]
    default = current

[alias]
    # 狀態與資訊
    st = status
    s = status -sb
    lg = log --oneline --graph --decorate -20
    ll = log --oneline -20
    last = log -1 HEAD --stat

    # 分支操作
    co = checkout
    br = branch
    bra = branch -a

    # 提交操作
    cm = commit -m
    ca = commit --amend
    unstage = reset HEAD --

    # 差異比較
    df = diff
    dfs = diff --staged

    # 常用組合
    undo = reset --soft HEAD~1
    wip = !git add -A && git commit -m 'WIP'
